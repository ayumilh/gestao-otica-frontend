generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model vendas {
  id          Int       @id @default(autoincrement())
  data        DateTime  @db.Date
  entrega     DateTime? @db.Date
  lentes      String    @db.VarChar(100)
  armacao     String    @db.VarChar(100)
  preco       Decimal
  sinal       Decimal?
  a_pagar     Decimal?  @default(0)
  obs         String?   @db.Text
  clienteCpf  String    @db.Char(11)
  cliente     clientes  @relation(fields: [clienteCpf], references: [cpf])

  @@map("vendas")
}

model clientes {
  id          Int      @id @default(autoincrement())
  nome        String   @db.VarChar(200)
  cpf         String   @unique @db.Char(11)
  endereco    String   @db.VarChar(200)
  numero      String   @db.VarChar(10)
  complemento String?  @db.VarChar(100)
  telefone    String   @db.VarChar(11)
  vendas      vendas[]

  @@map("clientes")
}
